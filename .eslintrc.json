{
  "extends": ["airbnb", "prettier"],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "jsx-a11y/href-no-hash": ["off"],
    "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }],

    "react/prop-types": 0,
    "indent": ["error", 2],
    "camelcase": [
      "error",
      { "properties": "never", "ignoreDestructuring": true }
    ]
  }
}
